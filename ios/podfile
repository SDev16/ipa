# Uncomment this line to define a global platform for your project
platform :ios, '17.0'

# CocoaPods analytics sends network stats synchronously affecting Flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_installation
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    abort("Generated.xcconfig must exist. Make sure `flutter pub get` is executed.")
  end

  # Support Xcode 14+ cache path for Flutter installation
  pod 'Flutter', :path => '../.symlinks/plugins/flutter'
  load File.join(File.dirname(__FILE__), '../Flutter/podhelper.rb')
end

# Flutter framework installation
flutter_installation

# Uncomment the following line to enable Flipper debugging, if you need it.
# pod 'Flipper', '~> 0.75.1'

# Add other pods here
# Example: pod 'Firebase/Analytics'
pod 'Firebase/Core'
pod 'Firebase/Auth'
pod 'Firebase/Storage'

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
